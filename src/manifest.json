{
  "manifest_version": 2,
  "name": "Tanoshii Dictionary Search",
  "description": "Searches for the selected text in the Tanoshii Dictionary",
  "version": "1.1.0",
  "minimum_chrome_version": "38",
  "permissions": ["contextMenus", "tabs", "activeTab"],
  "icons": {
    "48": "assets/search.png"
  },
  "background": {
    "scripts": ["background.ts"]
  },
  "content_scripts": [
    {
      "matches": ["https://www.tanoshiijapanese.com/dictionary/"],
      "js": ["content.ts"]
    }
  ]
}
